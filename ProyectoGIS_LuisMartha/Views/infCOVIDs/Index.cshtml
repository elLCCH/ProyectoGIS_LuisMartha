@model IEnumerable<ProyectoGIS_LuisMartha.Models.infCOVID>

@{
    ViewBag.Title = "Index";
}
     <h2><strong>Informacion Coronavirus COVID-19</strong></h2>


<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("Create", "infCOVIDs")" class="btn btn-primary">
        <i class="fa fa-plus" aria-hidden="true"></i>
        <span>
            <strong>Agregar Nuevo</strong>
        </span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatoDecesos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatoRecuperados)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatoNuevosCasos)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatoDecesos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatoRecuperados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatoNuevosCasos)
            </td>
            <td>

                <a href="@Url.Action("Edit", "infCOVIDs",new { id = item.Id })" class="btn btn-warning">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    <span>
                        <strong>Editar</strong>
                    </span>
                </a>
                <a href="@Url.Action("Delete", "infCOVIDs",new { id = item.Id })" class="btn btn-danger">
                    
                    <i class="fa fa-trash-o" aria-hidden="true"> </i>
                    <span>
                        <strong>Eliminar</strong>
                    </span>
                </a>

                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>
